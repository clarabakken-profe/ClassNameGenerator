  <h1>üé° Generador de Nombres de Clase üé®</h1>
  <p>Haz clic para girar las ruedas y obtener un nombre divertido</p>
  <button onclick="spinWheels()">üé≤ Girar</button>

  <div class="result" id="result">‚Äî</div>

  <script>
    const animals = [
      "Tigre", "Delf√≠n", "Lobo", "Mariposa", "Le√≥n",
      "Zorro", "Tortuga", "Gato", "Conejo", "√Åguila",
      "Serpiente", "Oso", "Rana", "Caballo", "P√°jaro"
    ];

    const colors = [
      "Rojo", "Azul", "Verde", "Amarillo", "Naranja",
      "Rosa", "Morado", "Negro", "Blanco", "Marr√≥n",
      "Gris", "Turquesa", "Dorado", "Plateado", "Celeste"
    ];

    function getRandomItem(arr) {
      return arr[Math.floor(Math.random() * arr.length)];
    }

    function spinWheels() {
      const animal = getRandomItem(animals);
      const color = getRandomItem(colors);
      const result = `${animal} ${color}`;
      document.getElementById("result").textContent = `Tu nombre de clase es: ${result}`;
    }
  </script>

